        <!--<li><a href="#" class="button">Link 4</a></li>-->
      <!--</ul>-->
    </div>
    <div class="header">
    <div id="logo">
      <%= link_to root_path do %>
          <%= image_tag "logo.svg" %>
          <!--<p>ikona blog</p>-->
      <% end %>
    </div>
    <h1 class="ggn">Dev Blog </h1>
    <h4 class="title4">Code never lies, comments sometimes do.
      </h4>
    <h6 class="titlee">— Ron Jeffries</h6>
</br>
    </div>
  </div>
</div>


<div class="row">


  <div class="large-9 columns" role="content">
    <hr/>
    <div class="buttons">

      <%= link_to "All Post", root_path, :class => :button %>
  <%= link_to "New Post", new_post_path, :class => :button %>

      <% if user_signed_in? %>
          <li><%= link_to 'Edit account', edit_user_registration_path, :class => :button %></li>
          <li><%= link_to 'Sign out', destroy_user_session_path, :method=>'delete', :class => :button %></li>
      <% end %>

      <button class="button"><%= link_to "Sign Out", destroy_user_session_path, :method => :delete %>
    Log Out</button>
    </div>
    <hr/>

    <article>

      <% flash.each do |name, msg| %>
          <%= content_tag(:div, msg, class: "alert") %>
      <% end %>
      <hr/>
      <%= yield %>
      <hr/>
    </article>

  </div>

  <aside class="large-3 columns">

    <h5>Categories</h5>
    <ul class="side-nav">
      <ul>
        <li class="category">Website</li>
        <li><%= link_to "Blog", root_path %></li>
        <li>About</li>
      </ul>

      <ul>
        <li class="category">Social</li>
        <li><a href="https://twitter.com/ikona23">Twitter</a></li>
        <li><a href="http://instagram.com/ikona23">Instagram</a></li>
        <li><a href="https://github.com/ikona23">Github</a></li>
        <li><a href="mailto:ikona23@gmail.com">Email</a></li>
      </ul>

      <a href class="sign_in">Admin Login</a>

    </ul>

    <div class="panel">
      <h5>Dev blog</h5>
      <p> This is the place for question and answers, about web_dev
      </p>
      <a href="http://peterkona.herokuapp.com">Please check my presonal website →</a>
    </div>
  </aside>
</div>

<footer class="row">
  <div class="large-12 columns">
    <hr/>
    <div class="row">
      <div class="large-6 columns">
        <p>© Peter Kona</p>
      </div>
      <div class="large-6 columns">
        <ul class="inline-list right">
          <div class="buttons">

            <button class="button"><%= link_to "All Post", root_path %></button>
            <button class="button"><%= link_to "New Post", new_post_path %></button>
            <button class="button">Log In</button>
            <button class="button">Log Out</button>
          </div>
        </ul>
      </div>
    </div>
  </div>
